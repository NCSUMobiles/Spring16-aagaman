<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gopackdev.arrivalpack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomePage"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FlightUpdates"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Roommate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Airport"
            android:label="@string/title_activity_airport"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewAcctScrollingActivity"
            android:label="@string/title_activity_new_acct_scrolling"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gopackdev.arrivalpack.LoginActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainHomeActivity"
            android:label="@string/title_activity_main_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProfileSettingActivity"
            android:label="@string/title_activity_profile_settings"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>