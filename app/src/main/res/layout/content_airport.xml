<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#708090"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:text="Enter Pickup Information "
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:layout_span="4"
                    android:padding="10dp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Flight Number"
                    android:textSize= "20dp"
                    android:textColor="#FFF"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/flight_no"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:hint="Enter Flight code"
                    android:textCursorDrawable="@null"
                    android:layout_column="2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Date"
                    android:textSize= "20dp"
                    android:textColor="#FFF"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/flight_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span = "2"
                    android:padding="10dp"
                    android:hint="Enter Arrival Date"/>


            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/arr_time_text"
                    android:text="Arrival Time"
                    android:textSize= "20dp"
                    android:textColor="#FFF"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>
                <TimePicker
                    android:id="@+id/dest_arr_time"
                    android:amPmTextColor="#fff"
                    android:layout_span = "3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/flightInfo"

                    android:text="Submit"
                    android:textColor="#FFFDED"
                    android:textSize="15sp"
                    android:layout_span = "4"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/flightstyle"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:padding="10dp"
                    />
            </TableRow>

        </TableLayout>

    </ScrollView>
</RelativeLayout>
